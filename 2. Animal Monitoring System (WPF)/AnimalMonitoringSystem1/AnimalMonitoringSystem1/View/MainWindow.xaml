<Window x:Class="AnimalMonitoringSystem.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimalMonitoringSystem"
        mc:Ignorable="d"        
        WindowStartupLocation="CenterScreen"
        Title="AMS_Home" Height="500" Width="900" Loaded="Window_Loaded">
    
    <!-- DockPanel and Frame are used to provide navigation within one window -->
    <!-- this makes it so the use can open all of the pages in the application within this one window -->
    
    <DockPanel>
        <Frame x:Name="AMS_Frame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
