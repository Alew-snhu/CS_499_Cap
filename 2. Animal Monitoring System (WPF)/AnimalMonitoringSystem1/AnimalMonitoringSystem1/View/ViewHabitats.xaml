<Page x:Class="AnimalMonitoringSystem.View.ViewHabitats"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AnimalMonitoringSystem"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="ViewHabitats">

    <Grid Height="500" Width="900">
        
        <!-- ImageBrush is used to provide the image for the background -->
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Jungle.jpg"></ImageBrush>
        </Grid.Background>
        
        <!-- TextBlock used for page title -->
        <TextBlock
            Style="{StaticResource VhBanner}">
            View Animal Habitat Information
        </TextBlock>
        
        <!-- Buttons for navigation -->
        <Button Margin="0,350,0,105" Click= "Button_Click_Main_Menu"       Style="{StaticResource VhNavButton}">Go Back</Button>
        <Button Margin="0,207,0,250" Click="Button_Click_ViewFromTextFile" Style="{StaticResource VhNavButton}" Height="45">View From Text File</Button>
        <Button Margin="0,277,0,180" Click="Button_Click_ViewFromDatabase" Style="{StaticResource VhNavButton}" Height="45">View From Database</Button>
    </Grid>
</Page>
